<%= form_with model: [ @article, @article.comments.build ] do |form| %>
    <div>
        <%= form.label :commenter %>
        <%= form.text_field :commenter %>
    </div>
    <div>
        <%= form.label :body %>
        <%= form.text_area :body %>
    </div>
    <div>
        <%= form.label :status %>
        <%= form.select :status, ['public', 'private'], selected: 'public' %>
    </div>
    <div class="submit-btn">
        <%= form.submit 'class' => 'contribute'  %>
    </div>
<% end %>